<%- include("partials/header.ejs"); -%>
<div class="table-div">
  <h1><%=username%>'s collection</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th style="width: 2.5%" scope="col">Cover</th>
      <th style="width: 21%" scope="col">Artist</th>
      <th style="width: 21%" scope="col">Album Name</th>
      <th style="width: 10%; text-align: center;" scope="col" >Year of Release</th>
      <th style="width: 6%; text-align: center; " scope="col">Rating</th>
      <th style="width: 6%; text-align: center;" scope="col">Condition</th>
      <th style="width: 5%; text-align: center;" scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% records.forEach(function(record){ %>
      <tr >
        <td style="text-align: center"><img class="cover-img" src=<%= record.img %> alt="cover prev."></td>
        <td><%= record.artist %></td>
        <td><%= record.name %></td>
        <td style="text-align: center"><%= record.year %>.</td>
        <td style="text-align: center"><%= record.rating %></td>
        <td style="text-align: center"><%= record.condition %></td>
        <td style="text-align: center" class="hidden-column">
          <form class="editDelete" action="/view/<%= record._id %>" method="get">
            <button  type="submit" name="button"><i class="fas fa-search show-icon"></i></button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
  </table>
</div>


<%- include("partials/footer.ejs"); -%>

