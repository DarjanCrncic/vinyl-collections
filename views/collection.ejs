<%- include("partials/header.ejs"); -%>
<div class="table-div">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th style="width: 2.5%" scope="col">Cover</th>
      <th style="width: 20%" scope="col"><a href="/collection/artist">Artist</a></th>
      <th style="width: 20%" scope="col"><a href="/collection/name">Album Name</a></th>
      <th style="width: 8%; text-align: center;" scope="col" ><a href="/collection/year">Year of Release</a></th>
      <th style="width: 8%; text-align: center; " scope="col">Rating</th>
      <th style="width: 8%; text-align: center;" scope="col">Condition</th>
      <th style="width: 5%; text-align: center;" class="hidden-column" scope="col">
        <form action="/add">
          <button class="btn btn-primary add-button show-icon" type="submit" name="button">Add</button>
        </form>
      </th>
    </tr>
  </thead>
  <tbody>
    <% records.forEach(function(record){ %>
      <tr >
        <td style="text-align: center"><img class="cover-img" src=<%= record.img %> alt="cover prev."></td>
        <td><%= record.artist %></td>
        <td><%= record.name %></td>
        <td style="text-align: center"><%= record.year %></td>
        <td style="text-align: center"><%= record.rating %></td>
        <td style="text-align: center"><%= record.condition %></td>
        <td style="text-align: center" class="hidden-column">
          <form class="editDelete" action="/edit" method="post">
            <button  type="submit" name="button"><i class="fas fa-pen show-icon"></i></button>
            <input type="hidden" name="recordId" value="<%= record._id %>">
          </form>
          <form class="editDelete" action="/delete" method="post">
            <button type="submit" name="button"><i class="fas fa-trash-alt show-icon"></i></button>
            <input type="hidden" name="recordId" value="<%= record._id %>">
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
  </table>
</div>
<div class="button-div">

</div>

<%- include("partials/footer.ejs"); -%>

<a href="#"></a>
