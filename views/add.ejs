<%- include("partials/header.ejs"); -%>


  <form class="" action="/record" method="post" id="addRecordForm">
    <div class="submit-div">
      <label for="artist">Artist name:</label>
      <input class="form-control" type="text" name="artist" placeholder="Artist name">
      <label for="name">Album name:</label>
      <input class="form-control" type="text" name="name" placeholder="Album name">
      <label for="year">Year of release:</label>
      <input class="form-control" type="number" name="year" min="1900" max="2099" step="1" value="2020"
        placeholder="Year of release" />
      
      <label for="rating">Rating:</label>
      <select name="rating" id="rating" form="addRecordForm" class="form-control">
        <option value="" selected>Choose the record rating</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
      
      <label for="condition">Vinyl condition:</label>
      <select name="condition" id="condition" form="addRecordForm" class="form-control">
        <option value="" selected>Choose the record condition</option>
        <option value="P">P (poor)</option>
        <option value="G">G (good)</option>
        <option value="VG">VG (very good)</option>
        <option value="VG+">VG+ (very good +)</option>
        <option value="E">E (excelent)</option>
        <option value="NM">NM (near mint)</option>
        <option value="M">M (mint)</option>
      </select>

      <label for="img">Cover image URL:</label>
      <input class="form-control" type="url" name="img" placeholder="Cover image URL">
      <small id="imgUrlHelp" class="form-text text-muted">Image will be added automatically if you leave this field empty.</small>
    </div>
    <button class="btn btn-primary submit-button" type="submit" name="button">Submit</button>

  </form>

  <% if(status !==undefined) if(status==="success" ){ %>
    <div id="alert-div-add" class="alert alert-success alert-divs" role="alert" style="display: block;">
      New record sucessfully added!
    </div>
    <% }else if(status==="error" ){ %>
      <div id="alert-div-add" class="alert alert-danger alert-divs" role="alert" style="display: block;">
        Something went wrong.
      </div>
    <% } %>

  <%- include("partials/footer.ejs"); -%>